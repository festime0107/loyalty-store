datasource db {
  provider = "sqlite"            // ose "postgresql", varësisht ç’të dhëna po përdor
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id         String     @id @default(uuid())
  name       String
  birthdate  DateTime
  email      String     @unique
  cardNumber String     @unique
  purchases  Purchase[]
}

model Purchase {
  id         String   @id @default(uuid())
  date       DateTime @default(now())
  product    String
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String
}
