generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id         String     @id @default(uuid())
  name       String
  birthdate  DateTime
  email      String     @unique
  cardNumber String     @unique
  purchases  Purchase[]
}

model Purchase {
  id         String   @id @default(uuid())
  date       DateTime @default(now())
  product    String
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  role     String  @default("ADMIN")
  name     String?
}
